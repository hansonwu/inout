<div id="board-wrapper">
  <div id="board">
    <table class="table">
      <thead>
        <tr><th><h3>Board</h3></th></tr>
      </thead>
      <tbody>
        <tr class="current-user">
          <td>
            <h3>Me</h3>
              <% if @current_user_is_in %>
                <span class="in-status">Available</span>
              <% else %>
                <span class="out-status">Not Available </span>
                  <% if !@status.empty? %>
                    <span class="status-message">(<%= @status %>)</span>
                  <% end %>
                </span>
              <% end %>
            </h4>
          <%= render 'create' %>
          </td>
        </tr>
        <% @users.each do |user| %>
          <% unless user.id == current_user.id %>
          <tr class="other-user">
            <td>
              <h3><%= user.name %></h3>
                <% if user.current_status.nil? || user.current_status.in %>
                  <span class="in-status">Available</span>
                <% else %>
                  <span class="out-status">Not Available </span>
                    <% if !user.current_status.status.empty? %>
                      <span class="status-message">(<%= user.current_status.status %>)</span>
                    <% end %>
                  </span>
                <% end %>
              </h4>
            </td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
